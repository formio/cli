{
  "root": true,
  "extends": "eslint-config-formio",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9
  },
  "rules": {
    "curly": [2, "all"],
    "no-unused-vars": [1, {"args": "none"}],
    "strict": [2, "global"],
    "max-statements": [2, 35],
    "no-console": 0,
    "indent": ["error", 2],
    "new-cap": ["error", { "capIsNewExceptions": ["Formio"] }]
  }
}
